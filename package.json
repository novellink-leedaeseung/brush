{
  "name": "novellink-brush",
  "private": true,
  "version": "0.0.0",
  "main": "electron.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "dev:full": "concurrently \"npm run server\" \"npm run dev\"",
    "electron": "wait-on http://localhost:5173 && electron .",
    "electron-dev": "concurrently \"npm run dev\" \"npm run electron\"",
    "electron-pack": "npm run build && electron-builder",
    "preelectron-pack": "npm run build",
    "build-electron": "npm run build && electron-builder --publish=never",
    "dist": "npm run build && electron-builder --publish=never",
    "dist-zip": "electron-builder -w zip"
  },
  "dependencies": {
    "async-mutex": "^0.5.0",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "electron-is-dev": "^3.0.1",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "fs-extra": "^11.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.1.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-basic-ssl": "^2.1.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "typescript": "~5.8.3",
    "vite": "^7.1.2",
    "wait-on": "^9.0.0"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.50.1"
  },
  "description": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/novellink-leedaeseung/brush.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/novellink-leedaeseung/brush/issues"
  },
  "build": {
    "appId": "com.novellink.brush",
    "productName": "오늘의 양치왕",
    "asar": false,
    "directories": {
      "output": "electron-dist",
      "buildResources": "public/assets"
    },
    "files": [
      "dist/**/*",
      "dist/**",
      "electron.js",
      "public/assets/**/*",
      "node_modules/**/*",
      "preload.js",
      {
        "from": "dist",
        "to": "dist",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "perMachine": true
    },
    "extraFiles": [
      {
        "from": "config.json",
        "to": "."
      }
    ]
  }
}